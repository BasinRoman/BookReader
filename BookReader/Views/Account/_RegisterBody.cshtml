
<!-- Body for registration modal window. It is updating via ajax. -->

@model BookReader.Domain.ViewModel.RegisterViewModel
@Html.AntiForgeryToken()
<div class="validation" asp-validation-summary="All" style="font-size:23px; font-family:Impact; color: red" class="text-danger text-center"></div>

<div class="form-outline form-white mb-4">
	<label asp-for="Login"></label><br />
	<input asp-for="Login" class="form-control textbox-dg font-weight-bold text-center" placeholder="A-Za-z0-9" type="text">
	<span asp-validation-for="Login"></span>

</div>
<div class="form-outline form-white mb-4">
	<label asp-for="Password"></label><br />
	<input  asp-for="Password" placeholder=" " class="form-control textbox-dg font-weight-bold text-center" type="password">
	<span asp-validation-for="Password"></span>
</div>
<div class="form-outline form-white mb-4">
	<label asp-for="PasswordConfirm"></label><br />
	<input  asp-for="PasswordConfirm" placeholder=" " class="form-control textbox-dg font-weight-bold text-center" type="password">
	<span asp-validation-for="PasswordConfirm"></span>
</div>
<button id = "submitButton" class="btn btn-outline-light btn-lg px-5" type="submit">Complete registration</button>
