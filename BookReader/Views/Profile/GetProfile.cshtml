@model BookReader.Domain.ViewModel.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row container d-flex justify-content-center h-" style="margin-top:10%">
   <div style="width:100%;">
      <div class="row h-50" style="font-size:20px">
         <div class="col-sm-4" style="width:100%">
            <div class="card-block text-center text-white">
               <div class="m-b-25">
                  <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
               </div>
               <h6 class="f-w-600">@User.Identity.Name</h6>
               <p>Web Designer</p>
               <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
            </div>
         </div>
         <div class="col-sm-8" style="font-size:larger; width:100%;">
            <div class="card-block">
               
               <div class="row text-center">
                  <div class="col-sm-6">

                     <p class="m-b-10 f-w-600">Email</p>
                     <h6 class="text-muted f-w-400">@Model.Email</h6>
                  </div>
                  <div class="col-sm-6">
                     <p class="m-b-10 f-w-600">Phone</p>
                     <h6 class="text-muted f-w-400">Not YET</h6>
                  </div>
               </div>
               
               <div class="row text-center">
                  <div class="col-sm-6">
                     <p class="m-b-10 f-w-600">Gender</p>
                     <h6 class="text-muted f-w-400">@Model.Gender</h6>
                  </div>
                  <div class="col-sm-6">
                     <p class="m-b-10 f-w-600">Age</p>
                     <h6 class="text-muted f-w-400">@Model.Age</h6>
                  </div>
               </div>    
            </div>
         </div>
      </div>
   </div>
</div>